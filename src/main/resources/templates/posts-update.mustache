{{>layout/header}}
<div class="col-md-12">
    <div class="col-md-6">
        <form>
            <div class="form-group">
                <h2>게시글 수정</h2>
            </div>
            <div class="form-group">
                <label for="id">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control" id="author" value="{{post.authorName}} ({{post.authorEmail}})" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content"}>{{post.content}}</textarea>
            </div>
            <div class="form-group">
                <label for="content">첨부파일</label>
                <ul id="attachments">
                    {{#post.attachments}}
                        <li id="attachment-li-{{id}}">
                            <a href="/attachment/{{id}}">{{userFileName}}</a>
                            <button type="button" class="btn btn-danger" id="btn-attachment-delete" onclick="main.deleteAttachment({{id}})" value="{{id}}">파일 삭제</button>
                        </li>
                    {{/post.attachments}}
                </ul>
                <button type="button" class="btn btn-secondary" id="btn-add-attachment">파일 추가</button>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정완료</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}